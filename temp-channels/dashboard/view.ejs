<style>
  input[type='number']::-webkit-inner-spin-button,
  input[type='number']::-webkit-outer-spin-button {
    -webkit-appearance: none;
    appearance: none;
    margin: 0;
  }
  
  input[type='number'] {
    -moz-appearance: textfield;
    appearance: textfield;
  }

  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
  
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>

<script>
  window.initialVoiceChannels = <%- JSON.stringify(voiceChannels || []) %>;
  window.initialCategories = <%- JSON.stringify(categories || []) %>;
</script>

<section>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    
    <!-- GENERADORES -->
    <div
      x-data="{
        generators: [],
        channels: window.initialVoiceChannels || [],
        categories: window.initialCategories || [],
        openModal: false,
        editingId: null,
        formData: {
          sourceChannelId: '',
          nombres: '',
          limite: 0,
          categoriaId: ''
        },
        saving: false,
        loading: true,
        
        getGuildId() {
          const pathname = window.location.pathname;
          const match = pathname.match(/\/dashboard\/([a-zA-Z0-9]+)/);
          return match ? match[1] : '';
        },
        
        async loadData() {
          try {
            this.loading = true;
            const guildId = this.getGuildId();
            if (!guildId) {
              console.error('[Dashboard] No guildId found');
              return;
            }
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const res = await fetch(baseUrl + '/api/settings');
            if (res.ok) {
              const data = await res.json();
              this.generators = data.generators || [];
              console.log('[Dashboard] Generadores cargados:', this.generators.length);
            } else {
              console.error('[Dashboard] Error:', res.status);
            }
          } catch (error) {
            console.error('[Dashboard] Error loading generators:', error);
          } finally {
            this.loading = false;
          }
        },
        
        async loadChannels() {
          try {
            const guildId = this.getGuildId();
            if (!guildId) return;
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const res = await fetch(baseUrl + '/api/channels');
            if (res.ok) {
              const data = await res.json();
              const allChannels = Array.isArray(data) ? data : [];
              this.channels = allChannels.filter(c => c.type === 2) || [];
              this.categories = allChannels.filter(c => c.type === 4) || [];
              console.log('[Dashboard] Canales actualizados:', this.channels.length);
            }
          } catch (error) {
            console.error('[Dashboard] Error loading channels:', error);
          }
        },
        
        openAddModal() {
          this.editingId = null;
          this.formData = { sourceChannelId: '', nombres: '', limite: 0, categoriaId: '' };
          this.openModal = true;
          console.log('[Dashboard] Modal abierto. Canales disponibles:', this.channels.length);
        },
        
        editGenerator(gen) {
          this.editingId = gen.sourceChannelId;
          this.formData = {
            sourceChannelId: gen.sourceChannelId,
            nombres: gen.namesList.join(', '),
            limite: gen.userLimit || 0,
            categoriaId: gen.parentCategoryId || ''
          };
          this.openModal = true;
        },
        
        async submitForm() {
          this.saving = true;
          try {
            const guildId = this.getGuildId();
            if (!guildId) {
              Alpine.store('toast').show('Guild no encontrado', 'error');
              return;
            }
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const method = this.editingId ? 'PATCH' : 'POST';
            const url = this.editingId 
              ? baseUrl + '/api/generator/' + this.editingId
              : baseUrl + '/api/generator';
            
            const res = await fetch(url, {
              method,
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(this.formData)
            });
            
            if (res.ok) {
              Alpine.store('toast').show('Configuraci√≥n guardada', 'success');
              this.openModal = false;
              await this.loadData();
            } else {
              throw new Error();
            }
          } catch (error) {
            console.error('Error:', error);
            Alpine.store('toast').show('Error al guardar', 'error');
          } finally {
            this.saving = false;
          }
        },
        
        async deleteGenerator(id) {
          if (!confirm('¬øEst√°s seguro de que quieres eliminar este generador?')) return;
          try {
            const guildId = this.getGuildId();
            if (!guildId) return;
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const res = await fetch(baseUrl + '/api/generator/' + id, { method: 'DELETE' });
            if (res.ok) {
              Alpine.store('toast').show('Generador eliminado', 'success');
              await this.loadData();
            }
          } catch (error) {
            Alpine.store('toast').show('Error al eliminar', 'error');
          }
        },
        
        init() {
          console.log('[Dashboard] Inicializando. Canales iniciales:', this.channels.length);
          this.loadData();
          this.loadChannels();
        }
      }"
      class="rounded-2xl bg-white p-6 shadow-lg dark:bg-[#090e2c] transition-colors duration-300">
      
      <div class="mb-6 flex items-center justify-between">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white">
          Generadores de Canales
        </h3>
        <button @click="openAddModal()"
          class="inline-flex items-center justify-center gap-2 rounded-xl bg-purple-500/10 dark:bg-purple-500/20 px-4 py-2.5 font-bold text-purple-700 dark:text-purple-300 transition-all hover:scale-105 active:scale-95 shadow-[0_10px_40px_-10px_rgba(168,85,247,0.3)]">
          <i class="fa-solid fa-plus text-sm"></i>
          A√±adir
        </button>
      </div>

      <div x-show="!loading" class="space-y-3 divide-y divide-gray-100 dark:divide-white/5">
        <template x-if="generators.length === 0">
          <p class="py-8 text-center text-gray-500 dark:text-gray-400">No hay generadores configurados</p>
        </template>
        
        <template x-for="gen in generators" :key="gen.sourceChannelId">
          <div class="flex items-start justify-between py-3 px-1 hover:bg-gray-50 dark:hover:bg-white/5 rounded-lg transition-colors">
            <div class="flex-1">
              <p class="font-bold text-gray-900 dark:text-white">
                <i class="fa-solid fa-microphone mr-2 text-purple-500"></i><span x-text="channels.find(c => c.id === gen.sourceChannelId)?.name || gen.sourceChannelId"></span>
              </p>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 ml-6">
                <i class="fa-solid fa-list mr-1"></i><span x-text="gen.namesList.join(', ')"></span>
              </p>
              <div class="flex gap-4 mt-2 ml-6 text-xs text-gray-500 dark:text-gray-400">
                <span><i class="fa-solid fa-users mr-1"></i>L√≠mite: <strong x-text="gen.userLimit === 0 ? 'Ilimitado' : gen.userLimit"></strong></span>
                <span x-show="gen.parentCategoryId"><i class="fa-solid fa-folder mr-1"></i><strong x-text="categories.find(c => c.id === gen.parentCategoryId)?.name || 'Desconocida'"></strong></span>
              </div>
            </div>
            <div class="flex gap-2 ml-4">
              <button @click="editGenerator(gen)" class="p-2 text-purple-500 hover:bg-purple-500/10 rounded-lg transition-colors">
                <i class="fa-solid fa-edit text-sm"></i>
              </button>
              <button @click="deleteGenerator(gen.sourceChannelId)" class="p-2 text-red-500 hover:bg-red-500/10 rounded-lg transition-colors">
                <i class="fa-solid fa-trash text-sm"></i>
              </button>
            </div>
          </div>
        </template>
      </div>
      
      <div x-show="loading" class="py-8 text-center">
        <i class="fa-solid fa-spinner fa-spin text-gray-400 text-lg"></i>
      </div>

      <!-- Modal -->
      <div x-show="openModal" @click.outside="openModal = false" 
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        class="fixed inset-0 bg-black/50 flex items-center justify-center z-50" style="display: none;">
        <div @click.stop class="bg-white dark:bg-[#090e2c] rounded-2xl p-6 max-w-md w-full mx-4 shadow-2xl border border-gray-200 dark:border-gray-700">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6">
            <span x-show="!editingId">Nuevo Generador</span>
            <span x-show="editingId">Editar Generador</span>
          </h3>
          
          <form @submit.prevent="submitForm" class="space-y-5">
            <div>
              <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">Canal de Voz <span class="text-red-500">*</span></label>
              <select x-model="formData.sourceChannelId" required
                class="w-full rounded-xl bg-gray-50 dark:bg-white/5 px-4 py-3 text-gray-900 dark:text-white border-0 focus:ring-2 focus:ring-purple-500 outline-none transition-all">
                <option value="">Selecciona un canal...</option>
                <template x-for="ch in channels" :key="ch.id">
                  <option :value="ch.id" x-text="'üé§ ' + ch.name"></option>
                </template>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">Nombres <span class="text-red-500">*</span></label>
              <input type="text" x-model="formData.nombres" placeholder="Alpha, Beta, Gamma" required
                class="w-full rounded-xl bg-gray-50 dark:bg-white/5 px-4 py-3 text-gray-900 dark:text-white border-0 focus:ring-2 focus:ring-purple-500 outline-none transition-all">
            </div>
            
            <div>
              <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">L√≠mite de Usuarios</label>
              <div class="flex items-center rounded-xl bg-gray-50 dark:bg-white/5 p-1 overflow-hidden">
                <button type="button" @click="if(formData.limite > 0) formData.limite--" class="flex h-9 w-9 items-center justify-center text-gray-500 hover:bg-gray-200 dark:text-gray-400 dark:hover:bg-white/10 transition-colors">
                  <i class="fa-solid fa-minus text-xs"></i>
                </button>
                <input type="number" x-model.number="formData.limite" class="w-full bg-transparent border-none text-center font-bold text-gray-900 dark:text-white focus:ring-0 outline-none" />
                <button type="button" @click="if(formData.limite < 99) formData.limite++" class="flex h-9 w-9 items-center justify-center text-gray-500 hover:bg-gray-200 dark:text-gray-400 dark:hover:bg-white/10 transition-colors">
                  <i class="fa-solid fa-plus text-xs"></i>
                </button>
              </div>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">0 = Ilimitado</p>
            </div>

            <div>
              <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-2">Categor√≠a (Opcional)</label>
              <select x-model="formData.categoriaId"
                class="w-full rounded-xl bg-gray-50 dark:bg-white/5 px-4 py-3 text-gray-900 dark:text-white border-0 focus:ring-2 focus:ring-purple-500 outline-none transition-all">
                <option value="">Sin categor√≠a</option>
                <template x-for="cat in categories" :key="cat.id">
                  <option :value="cat.id" x-text="'üìÅ ' + cat.name"></option>
                </template>
              </select>
            </div>
            
            <div class="flex items-center gap-3 border-t border-gray-200 dark:border-gray-700 pt-6">
              <button type="button" @click="openModal = false"
                class="flex-1 rounded-xl bg-gray-200 dark:bg-gray-700 px-4 py-2.5 font-bold text-gray-900 dark:text-white hover:opacity-75 transition-opacity">
                Cancelar
              </button>
              <button type="submit" :disabled="saving"
                class="flex-1 inline-flex items-center justify-center gap-2 rounded-xl bg-purple-500/10 dark:bg-purple-500/20 px-4 py-2.5 font-bold text-purple-700 dark:text-purple-300 transition-all hover:scale-105 active:scale-95 disabled:opacity-50 shadow-[0_10px_40px_-10px_rgba(168,85,247,0.3)]">
                <i class="fa-solid fa-floppy-disk" x-show="!saving"></i>
                <i class="fa-solid fa-spinner fa-spin" x-show="saving"></i>
                <span x-show="!saving">Guardar</span>
                <span x-show="saving">Guardando...</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- CANALES ACTIVOS -->
    <div
      x-data="{
        activeChannels: [],
        generators: [],
        loading: true,
        
        getGuildId() {
          const pathname = window.location.pathname;
          const match = pathname.match(/\/dashboard\/([a-zA-Z0-9]+)/);
          return match ? match[1] : '';
        },
        
        async loadData() {
          try {
            this.loading = true;
            const guildId = this.getGuildId();
            if (!guildId) {
              console.error('[Dashboard] No guildId found');
              return;
            }
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const [resActive, resGen] = await Promise.all([
              fetch(baseUrl + '/api/active'),
              fetch(baseUrl + '/api/settings')
            ]);
            
            if (resActive.ok) {
              const data = await resActive.json();
              this.activeChannels = Array.isArray(data) ? data : [];
            }
            
            if (resGen.ok) {
              const data = await resGen.json();
              this.generators = (data && data.generators) || [];
            }
          } catch (error) {
            console.error('[Dashboard] Error loading data:', error);
          } finally {
            this.loading = false;
          }
        },
        
        getGeneratorName(sourceChannelId) {
          const gen = this.generators.find(g => g.sourceChannelId === sourceChannelId);
          return gen ? gen.namesList.join(', ') : 'Desconocido';
        },
        
        async deleteChannel(id) {
          if (!confirm('¬øEst√°s seguro de que quieres eliminar este canal?')) return;
          try {
            const guildId = this.getGuildId();
            if (!guildId) return;
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const res = await fetch(baseUrl + '/api/channel/' + id, { method: 'DELETE' });
            if (res.ok) {
              Alpine.store('toast').show('Canal eliminado', 'success');
              await this.loadData();
            }
          } catch (error) {
            Alpine.store('toast').show('Error al eliminar', 'error');
          }
        },
        
        init() {
          this.loadData();
          setInterval(() => this.loadData(), 5000);
        }
      }"
      class="rounded-2xl bg-white p-6 shadow-lg dark:bg-[#090e2c] transition-colors duration-300">
      
      <h3 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">
        Canales Activos
      </h3>

      <div x-show="!loading" class="space-y-3 divide-y divide-gray-100 dark:divide-white/5">
        <template x-if="activeChannels.length === 0">
          <p class="py-8 text-center text-gray-500 dark:text-gray-400">No hay canales temporales activos</p>
        </template>
        
        <template x-for="ch in activeChannels" :key="ch.channelId">
          <div class="flex items-start justify-between py-3 px-1 hover:bg-gray-50 dark:hover:bg-white/5 rounded-lg transition-colors">
            <div class="flex-1">
              <p class="font-bold text-gray-900 dark:text-white">
                <i class="fa-solid fa-microphone mr-2 text-blue-500"></i><span x-text="ch.channelName"></span>
              </p>
              <div class="flex gap-4 mt-2 ml-6 text-xs text-gray-500 dark:text-gray-400">
                <span><i class="fa-solid fa-clock mr-1"></i><span x-text="Math.floor((Date.now() - new Date(ch.createdAt)) / 1000)"></span>s</span>
                <span><i class="fa-solid fa-tag mr-1"></i><span x-text="getGeneratorName(ch.sourceChannelId)"></span></span>
              </div>
            </div>
            <button @click="deleteChannel(ch.channelId)" class="p-2 text-red-500 hover:bg-red-500/10 rounded-lg transition-colors">
              <i class="fa-solid fa-trash text-sm"></i>
            </button>
          </div>
        </template>
      </div>
      
      <div x-show="loading" class="py-8 text-center">
        <i class="fa-solid fa-spinner fa-spin text-gray-400 text-lg"></i>
      </div>
    </div>
  </div>
</section>
