<section>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
    
    <!-- GENERADORES -->
    <div
      x-data="{
        generators: [],
        channels: window.initialVoiceChannels || [],
        categories: window.initialCategories || [],
        openModal: false,
        openChannelDropdown: false,
        openCategoryDropdown: false,
        editingId: null,
        formData: {
          sourceChannelId: '',
          nombres: '',
          limite: 0,
          categoriaId: ''
        },
        saving: false,
        loading: true,
        
        getGuildId() {
          const pathname = window.location.pathname;
          const match = pathname.match(/\/dashboard\/([a-zA-Z0-9]+)/);
          return match ? match[1] : '';
        },
        
        async loadData() {
          try {
            this.loading = true;
            const guildId = this.getGuildId();
            if (!guildId) return;
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const res = await fetch(baseUrl + '/api/settings');
            if (res.ok) {
              const data = await res.json();
              this.generators = data.generators || [];
            }
          } catch (error) {
            console.error('[Dashboard] Error loading generators:', error);
          } finally {
            this.loading = false;
          }
        },
        
        async loadChannels() {
          try {
            const guildId = this.getGuildId();
            if (!guildId) return;
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const res = await fetch(baseUrl + '/api/channels');
            if (res.ok) {
              const data = await res.json();
              const allChannels = Array.isArray(data) ? data : [];
              this.channels = allChannels.filter(c => c.type === 2) || [];
              this.categories = allChannels.filter(c => c.type === 4) || [];
            }
          } catch (error) {
            console.error('[Dashboard] Error loading channels:', error);
          }
        },
        
        openAddModal() {
          this.editingId = null;
          this.formData = { sourceChannelId: '', nombres: '', limite: 0, categoriaId: '' };
          this.openModal = true;
        },
        
        editGenerator(gen) {
          this.editingId = gen.sourceChannelId;
          this.formData = {
            sourceChannelId: gen.sourceChannelId,
            nombres: gen.namesList.join(', '),
            limite: gen.userLimit || 0,
            categoriaId: gen.parentCategoryId || ''
          };
          this.openModal = true;
        },
        
        async submitForm() {
          if (!this.formData.sourceChannelId) {
            Alpine.store('toast').show('Selecciona un canal', 'error');
            return;
          }
          if (!this.formData.nombres.trim()) {
            Alpine.store('toast').show('Ingresa los nombres', 'error');
            return;
          }
          
          this.saving = true;
          try {
            const guildId = this.getGuildId();
            if (!guildId) {
              Alpine.store('toast').show('Guild no encontrado', 'error');
              this.saving = false;
              return;
            }
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const method = this.editingId ? 'PATCH' : 'POST';
            const url = this.editingId 
              ? baseUrl + '/api/generator/' + this.editingId
              : baseUrl + '/api/generator';
            
            const res = await fetch(url, {
              method,
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(this.formData)
            });
            
            if (res.ok) {
              Alpine.store('toast').show('Configuraci칩n guardada', 'success');
              this.openModal = false;
              this.openChannelDropdown = false;
              this.openCategoryDropdown = false;
              await this.loadData();
            } else {
              const error = await res.json();
              Alpine.store('toast').show(error.error || 'Error al guardar', 'error');
            }
          } catch (error) {
            console.error('Error:', error);
            Alpine.store('toast').show('Error al guardar', 'error');
          } finally {
            this.saving = false;
          }
        },
        
        async deleteGenerator(id) {
          if (!confirm('쮼st치s seguro de que quieres eliminar este generador?')) return;
          try {
            const guildId = this.getGuildId();
            if (!guildId) return;
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const res = await fetch(baseUrl + '/api/generator/' + id, { method: 'DELETE' });
            if (res.ok) {
              Alpine.store('toast').show('Generador eliminado', 'success');
              await this.loadData();
            }
          } catch (error) {
            Alpine.store('toast').show('Error al eliminar', 'error');
          }
        },
        
        init() {
          this.loadData();
          this.loadChannels();
        }
      }"
      class="rounded-2xl bg-white p-6 shadow-lg dark:bg-[#090e2c] transition-colors duration-300">
      
      <div class="mb-6 flex items-center justify-between">
        <h3 class="text-xl font-bold text-gray-900 dark:text-white">
          Generadores de Canales
        </h3>
        <button @click="openAddModal()"
          class="inline-flex items-center justify-center gap-2 rounded-xl bg-purple-500/10 dark:bg-purple-500/20 px-4 py-2.5 font-bold text-purple-700 dark:text-purple-300 transition-all hover:scale-105 active:scale-95 shadow-[0_10px_40px_-10px_rgba(168,85,247,0.3)]">
          <i class="fa-solid fa-plus text-sm"></i>
          A침adir
        </button>
      </div>

      <div x-show="!loading" class="space-y-3 divide-y divide-gray-100 dark:divide-white/5">
        <template x-if="generators.length === 0">
          <p class="py-8 text-center text-gray-500 dark:text-gray-400">No hay generadores configurados</p>
        </template>
        
        <template x-for="gen in generators" :key="gen.sourceChannelId">
          <div class="flex items-start justify-between py-3 px-1 hover:bg-gray-50 dark:hover:bg-white/5 rounded-lg transition-colors">
            <div class="flex-1">
              <p class="font-bold text-gray-900 dark:text-white">
                <i class="fa-solid fa-microphone mr-2 text-purple-500"></i><span x-text="channels.find(c => c.id === gen.sourceChannelId)?.name || gen.sourceChannelId"></span>
              </p>
              <p class="text-xs text-gray-500 dark:text-gray-400 mt-2 ml-6">
                <i class="fa-solid fa-list mr-1"></i><span x-text="gen.namesList.join(', ')"></span>
              </p>
              <div class="flex gap-4 mt-2 ml-6 text-xs text-gray-500 dark:text-gray-400">
                <span><i class="fa-solid fa-users mr-1"></i>L칤mite: <strong x-text="gen.userLimit === 0 ? 'Ilimitado' : gen.userLimit"></strong></span>
                <span x-show="gen.parentCategoryId"><i class="fa-solid fa-folder mr-1"></i><strong x-text="categories.find(c => c.id === gen.parentCategoryId)?.name || 'Desconocida'"></strong></span>
              </div>
            </div>
            <div class="flex gap-2 ml-4">
              <button @click="editGenerator(gen)" class="p-2 text-purple-500 hover:bg-purple-500/10 rounded-lg transition-colors">
                <i class="fa-solid fa-edit text-sm"></i>
              </button>
              <button @click="deleteGenerator(gen.sourceChannelId)" class="p-2 text-red-500 hover:bg-red-500/10 rounded-lg transition-colors">
                <i class="fa-solid fa-trash text-sm"></i>
              </button>
            </div>
          </div>
        </template>
      </div>
      
      <div x-show="loading" class="py-8 text-center">
        <i class="fa-solid fa-spinner fa-spin text-gray-400 text-lg"></i>
      </div>

      <!-- Modal Mejorado -->
      <div x-show="openModal" @click.outside="openModal = false" 
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        class="fixed inset-0 bg-black/50 flex items-center justify-center z-50 backdrop-blur-sm" style="display: none;">
        <div @click.stop class="relative overflow-hidden rounded-xl bg-white dark:bg-[#07081d] shadow-2xl border-none max-w-lg w-full mx-4">
          <button type="button" @click="openModal = false"
            class="absolute right-4 top-4 inline-flex h-10 w-10 items-center justify-center rounded-full bg-gray-100 dark:bg-gray-800 text-gray-500 dark:text-gray-400 transition-colors hover:bg-gray-200 dark:hover:bg-gray-700 z-50">
            <i class="fa-solid fa-xmark"></i>
          </button>

          <div class="p-8">
            <h3 class="mb-2 text-2xl font-bold text-gray-900 dark:text-white">
              <span x-show="!editingId">Nuevo Generador</span>
              <span x-show="editingId">Editar Generador</span>
            </h3>
            <p class="mb-6 text-gray-600 dark:text-gray-400">
              <span x-show="!editingId">Configura un nuevo generador de canales temporales</span>
              <span x-show="editingId">Actualiza la configuraci칩n del generador</span>
            </p>

            <form @submit.prevent="submitForm" class="space-y-5">
              <div>
                <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-3">Canal de Voz <span class="text-red-500">*</span></label>
                <div class="relative">
                  <button type="button" @click="openChannelDropdown = !openChannelDropdown" @click.away="openChannelDropdown = false"
                    class="flex w-full items-center justify-between rounded-xl bg-gray-50 px-4 py-3 text-left dark:bg-white/5 dark:text-white hover:bg-gray-100 dark:hover:bg-white/10 transition-all outline-none border-none ring-0"
                    style="border: none !important;">
                    <span class="truncate font-medium text-sm" 
                          x-text="formData.sourceChannelId ? channels.find(c => c.id === formData.sourceChannelId)?.name : 'Selecciona un canal...'">
                    </span>
                    <i class="fa-solid fa-chevron-down text-[10px] transition-transform duration-300" :class="openChannelDropdown ? 'rotate-180' : ''"></i>
                  </button>
                  
                  <div x-show="openChannelDropdown" 
                    x-transition:enter="transition ease-out duration-200"
                    x-transition:enter-start="opacity-0 translate-y-[-10px]"
                    x-transition:enter-end="opacity-100 translate-y-0"
                    class="absolute z-50 mt-2 max-h-48 w-full overflow-auto rounded-xl bg-white p-1.5 shadow-2xl ring-1 ring-black/5 dark:bg-[#0d123d] dark:ring-white/10 scrollbar-hide" 
                    style="display: none;">
                    
                    <div @click="formData.sourceChannelId = ''; openChannelDropdown = false" 
                         class="cursor-pointer rounded-lg px-3 py-2 text-sm hover:bg-gray-100 dark:hover:bg-white/10 dark:text-gray-400 italic">
                      Selecciona un canal...
                    </div>
                    
                    <template x-for="ch in channels" :key="ch.id">
                      <div @click="formData.sourceChannelId = ch.id; openChannelDropdown = false" 
                           class="group flex cursor-pointer items-center justify-between rounded-lg px-3 py-2 text-sm hover:bg-purple-500/10 transition-colors">
                        <span class="text-gray-700 dark:text-gray-300 group-hover:text-purple-500" x-text="'游꿗 ' + ch.name"></span>
                        <i class="fa-solid fa-check text-[10px] text-purple-500" x-show="formData.sourceChannelId === ch.id"></i>
                      </div>
                    </template>
                  </div>
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-3">Nombres <span class="text-red-500">*</span></label>
                <div class="rounded-xl bg-gray-50 dark:bg-white/5 transition-all hover:bg-gray-100 dark:hover:bg-white/10">
                  <input type="text" x-model="formData.nombres" placeholder="Alpha, Beta, Gamma" required
                    class="w-full bg-transparent px-4 py-3 text-sm font-medium text-gray-900 dark:text-white focus:ring-0 outline-none" 
                    style="border: none !important; box-shadow: none !important;">
                </div>
              </div>
              
              <div>
                <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-3">L칤mite de Usuarios</label>
                <div class="flex max-w-[160px] items-center rounded-xl bg-gray-50 p-1 dark:bg-white/5 overflow-hidden border-none">
                  <button type="button" @click="if(formData.limite > 0) formData.limite--" 
                          class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg text-gray-500 hover:bg-gray-200 dark:text-gray-400 dark:hover:bg-white/10 transition-colors outline-none border-none">
                    <i class="fa-solid fa-minus text-xs"></i>
                  </button>
                  <input type="number" x-model.number="formData.limite" 
                         class="w-full bg-transparent border-none text-center font-bold text-gray-900 dark:text-white focus:ring-0 outline-none" 
                         style="border: none !important; box-shadow: none !important; -moz-appearance: textfield;" />
                  <button type="button" @click="formData.limite++" 
                          class="flex h-10 w-10 shrink-0 items-center justify-center rounded-lg text-gray-500 hover:bg-gray-200 dark:text-gray-400 dark:hover:bg-white/10 transition-colors outline-none border-none">
                    <i class="fa-solid fa-plus text-xs"></i>
                  </button>
                </div>
                <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">0 = Ilimitado</p>
              </div>

              <div>
                <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-3">Categor칤a (Opcional)</label>
                <div class="relative">
                  <button type="button" @click="openCategoryDropdown = !openCategoryDropdown" @click.away="openCategoryDropdown = false"
                    class="flex w-full items-center justify-between rounded-xl bg-gray-50 px-4 py-3 text-left dark:bg-white/5 dark:text-white hover:bg-gray-100 dark:hover:bg-white/10 transition-all outline-none border-none ring-0"
                    style="border: none !important;">
                    <span class="truncate font-medium text-sm" 
                          x-text="formData.categoriaId ? categories.find(c => c.id === formData.categoriaId)?.name : 'Sin categor칤a'">
                    </span>
                    <i class="fa-solid fa-chevron-down text-[10px] transition-transform duration-300" :class="openCategoryDropdown ? 'rotate-180' : ''"></i>
                  </button>
                  
                  <div x-show="openCategoryDropdown" 
                    x-transition:enter="transition ease-out duration-200"
                    x-transition:enter-start="opacity-0 translate-y-[-10px]"
                    x-transition:enter-end="opacity-100 translate-y-0"
                    class="absolute z-50 mt-2 max-h-48 w-full overflow-auto rounded-xl bg-white p-1.5 shadow-2xl ring-1 ring-black/5 dark:bg-[#0d123d] dark:ring-white/10 scrollbar-hide" 
                    style="display: none;">
                    
                    <div @click="formData.categoriaId = ''; openCategoryDropdown = false" 
                         class="cursor-pointer rounded-lg px-3 py-2 text-sm hover:bg-gray-100 dark:hover:bg-white/10 dark:text-gray-400 italic">
                      Sin categor칤a
                    </div>
                    
                    <template x-for="cat in categories" :key="cat.id">
                      <div @click="formData.categoriaId = cat.id; openCategoryDropdown = false" 
                           class="group flex cursor-pointer items-center justify-between rounded-lg px-3 py-2 text-sm hover:bg-purple-500/10 transition-colors">
                        <span class="text-gray-700 dark:text-gray-300 group-hover:text-purple-500" x-text="'游늬 ' + cat.name"></span>
                        <i class="fa-solid fa-check text-[10px] text-purple-500" x-show="formData.categoriaId === cat.id"></i>
                      </div>
                    </template>
                  </div>
                </div>
              </div>
              
              <div class="flex items-center justify-end gap-3 border-t border-gray-200 dark:border-gray-700 pt-6">
                <button type="button" @click="openModal = false"
                  class="inline-flex items-center justify-center rounded-xl bg-gray-100 dark:bg-white/5 border border-gray-200 dark:border-white/10 px-6 py-3 font-bold text-gray-600 dark:text-gray-300 transition-all hover:bg-gray-200 dark:hover:bg-white/10 active:scale-95 relative overflow-hidden group">
                  <div class="absolute inset-0 bg-gradient-to-r from-gray-600/0 via-gray-600/10 to-gray-600/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
                  <i class="fa-solid fa-xmark mr-2 relative z-10"></i>
                  <span class="relative z-10">Cancelar</span>
                </button>
                <button type="submit" :disabled="saving"
                  class="inline-flex items-center justify-center gap-2 rounded-xl bg-gradient-to-r from-emerald-500 to-teal-600 px-6 py-3 font-bold text-white transition-all shadow-[0_10px_40px_-10px_rgba(16,185,129,0.4)] hover:scale-105 hover:shadow-[0_15px_50px_-10px_rgba(16,185,129,0.5)] active:scale-95 disabled:opacity-50 relative overflow-hidden group">
                  <div class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/25 to-white/0 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></div>
                  <i class="fa-solid fa-circle-check relative z-10" x-show="!saving"></i>
                  <i class="fa-solid fa-spinner fa-spin relative z-10" x-show="saving"></i>
                  <span class="relative z-10" x-text="saving ? 'Guardando...' : 'Guardar'"></span>
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- CANALES ACTIVOS -->
    <div
      x-data="{
        activeChannels: [],
        generators: [],
        loading: true,
        
        getGuildId() {
          const pathname = window.location.pathname;
          const match = pathname.match(/\/dashboard\/([a-zA-Z0-9]+)/);
          return match ? match[1] : '';
        },
        
        async loadData() {
          try {
            this.loading = true;
            const guildId = this.getGuildId();
            if (!guildId) return;
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const [resActive, resGen] = await Promise.all([
              fetch(baseUrl + '/api/active'),
              fetch(baseUrl + '/api/settings')
            ]);
            
            if (resActive.ok) {
              const data = await resActive.json();
              this.activeChannels = Array.isArray(data) ? data : [];
            }
            
            if (resGen.ok) {
              const data = await resGen.json();
              this.generators = (data && data.generators) || [];
            }
          } catch (error) {
            console.error('[Dashboard] Error loading data:', error);
          } finally {
            this.loading = false;
          }
        },
        
        getGeneratorName(sourceChannelId) {
          const gen = this.generators.find(g => g.sourceChannelId === sourceChannelId);
          return gen ? gen.namesList.join(', ') : 'Desconocido';
        },
        
        async deleteChannel(id) {
          if (!confirm('쮼st치s seguro de que quieres eliminar este canal?')) return;
          try {
            const guildId = this.getGuildId();
            if (!guildId) return;
            const baseUrl = '/dashboard/' + guildId + '/temp-channels';
            const res = await fetch(baseUrl + '/api/channel/' + id, { method: 'DELETE' });
            if (res.ok) {
              Alpine.store('toast').show('Canal eliminado', 'success');
              await this.loadData();
            }
          } catch (error) {
            Alpine.store('toast').show('Error al eliminar', 'error');
          }
        },
        
        init() {
          this.loadData();
          setInterval(() => this.loadData(), 5000);
        }
      }"
      class="rounded-2xl bg-white p-6 shadow-lg dark:bg-[#090e2c] transition-colors duration-300">
      
      <h3 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">
        Canales Activos
      </h3>

      <div x-show="!loading" class="space-y-3 divide-y divide-gray-100 dark:divide-white/5">
        <template x-if="activeChannels.length === 0">
          <p class="py-8 text-center text-gray-500 dark:text-gray-400">No hay canales temporales activos</p>
        </template>
        
        <template x-for="ch in activeChannels" :key="ch.channelId">
          <div class="flex items-start justify-between py-3 px-1 hover:bg-gray-50 dark:hover:bg-white/5 rounded-lg transition-colors">
            <div class="flex-1">
              <p class="font-bold text-gray-900 dark:text-white">
                <i class="fa-solid fa-microphone mr-2 text-blue-500"></i><span x-text="ch.channelName"></span>
              </p>
              <div class="flex gap-4 mt-2 ml-6 text-xs text-gray-500 dark:text-gray-400">
                <span><i class="fa-solid fa-clock mr-1"></i><span x-text="Math.floor((Date.now() - new Date(ch.createdAt)) / 1000)"></span>s</span>
                <span><i class="fa-solid fa-tag mr-1"></i><span x-text="getGeneratorName(ch.sourceChannelId)"></span></span>
                <span x-show="ch.createdBy"><i class="fa-solid fa-user mr-1"></i><span x-text="'Usuario: ' + ch.createdBy"></span></span>
              </div>
            </div>
            <button @click="deleteChannel(ch.channelId)" class="p-2 text-red-500 hover:bg-red-500/10 rounded-lg transition-colors">
              <i class="fa-solid fa-trash text-sm"></i>
            </button>
          </div>
        </template>
      </div>
      
      <div x-show="loading" class="py-8 text-center">
        <i class="fa-solid fa-spinner fa-spin text-gray-400 text-lg"></i>
      </div>
    </div>
  </div>
</section>
