<style>
  [x-cloak] { display: none !important; }
  
  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  .music-record {
    animation: rotate 20s linear infinite;
  }
  .music-record.paused {
    animation-play-state: paused;
  }

  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }
  .pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>

<section x-cloak x-data="musicPlayer()" @destroy="destroy()" class="rounded-2xl bg-white dark:bg-[#090e2c] transition-colors duration-300 overflow-hidden">
  
  <!-- Header -->
  <div class="bg-gradient-to-r from-indigo-600 to-purple-600 dark:from-indigo-700 dark:to-purple-700 p-6">
    <div class="flex items-center justify-between">
      <h3 class="text-3xl font-bold text-white">Reproductor de Música</h3>
      <div class="flex items-center gap-3">
        <span class="text-xs text-white/80" x-text="lastUpdate ? 'Act: ' + lastUpdate : ''"></span>
        <span 
          class="text-xs px-3 py-1 rounded-full font-semibold transition-colors flex items-center gap-1"
          :class="isConnected ? 'bg-green-500 text-white' : 'bg-red-500 text-white'"
        >
          <i class="fa-solid" :class="isConnected ? 'fa-check-circle' : 'fa-circle-xmark'"></i>
          <span x-text="isConnected ? 'Conectado' : 'Desconectado'"></span>
        </span>
      </div>
    </div>
  </div>

  <!-- Main Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-0 max-h-[calc(100vh-80px)]">
    
    <!-- LEFT: Player -->
    <div class="lg:col-span-2 border-r border-gray-200 dark:border-white/10 p-8 overflow-y-auto max-h-[calc(100vh-80px)]">
      
      <!-- Loading -->
      <template x-if="loading">
        <div class="flex flex-col items-center justify-center py-20">
          <div class="mb-6 flex h-24 w-24 items-center justify-center rounded-full bg-gray-100 dark:bg-white/5 pulse">
            <i class="fa-solid fa-music text-4xl text-gray-400"></i>
          </div>
          <p class="text-lg text-gray-600 dark:text-gray-300 font-medium">Cargando reproductor...</p>
        </div>
      </template>

      <!-- Error -->
      <template x-if="!loading && error">
        <div class="rounded-lg bg-red-50 dark:bg-red-900/20 p-6 border border-red-200 dark:border-red-800">
          <div class="flex items-start gap-4">
            <i class="fa-solid fa-exclamation-circle text-2xl text-red-600 dark:text-red-400"></i>
            <div>
              <h4 class="text-sm font-bold text-red-600 dark:text-red-400 mb-1">Error</h4>
              <p class="text-sm text-red-600 dark:text-red-400/80" x-text="error"></p>
            </div>
          </div>
        </div>
      </template>

      <!-- No Music Playing -->
      <template x-if="!loading && !error && !status.active">
        <div class="flex flex-col items-center justify-center py-20">
          <div class="mb-6 flex h-24 w-24 items-center justify-center rounded-full bg-gray-100 dark:bg-white/5">
            <i class="fa-solid fa-headphones text-4xl text-gray-400"></i>
          </div>
          <p class="text-lg text-gray-600 dark:text-gray-300 font-medium">No hay nada sonando</p>
          <p class="text-sm text-gray-400 mt-2">Toca una canción en Discord para comenzar</p>
        </div>
      </template>

      <!-- Active Player -->
      <template x-if="!loading && !error && status.active && status.current">
        <div class="space-y-8">
          <!-- Album Art -->
          <div class="flex flex-col items-center gap-8">
            <div class="relative group">
              <div 
                :class="status.paused ? 'music-record paused' : 'music-record'"
                class="h-56 w-56 overflow-hidden rounded-2xl border-4 border-indigo-500/30 shadow-2xl"
              >
                <img 
                  :src="status.current.artwork || 'https://via.placeholder.com/300?text=Album'" 
                  class="h-full w-full object-cover"
                  alt="Album Artwork"
                />
              </div>
            </div>

            <!-- Song Info -->
            <div class="text-center w-full">
              <p class="text-sm font-semibold text-indigo-600 dark:text-indigo-400 uppercase tracking-wide mb-2">Reproduciendo ahora</p>
              <h2 class="text-3xl font-black text-gray-900 dark:text-white mb-3 line-clamp-2">
                <span x-text="status.current.title || 'Desconocido'"></span>
              </h2>
              <p class="text-lg text-gray-600 dark:text-gray-300 font-semibold mb-6">
                <span x-text="status.current.author || 'Artista desconocido'"></span>
              </p>
              
              <!-- Status Badges -->
              <div class="flex flex-wrap gap-3 justify-center mb-8">
                <span 
                  class="px-3 py-1 rounded-full text-xs font-semibold"
                  :class="status.paused ? 'bg-yellow-500/20 text-yellow-600 dark:text-yellow-400' : 'bg-green-500/20 text-green-600 dark:text-green-400'"
                >
                  <i class="fa-solid mr-1" :class="status.paused ? 'fa-pause' : 'fa-play'"></i>
                  <span x-text="status.paused ? 'Pausado' : 'Reproduciéndose'"></span>
                </span>
                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-blue-500/20 text-blue-600 dark:text-blue-400">
                  <i class="fa-solid fa-volume-high mr-1"></i>
                  <span x-text="status.volume + '%'"></span>
                </span>
              </div>

              <!-- Control Buttons - SIMPLIFICADOS -->
              <div class="flex flex-wrap gap-3 justify-center">
                <!-- PLAY/PAUSE BUTTON -->
                <button 
                  type="button"
                  @click="togglePause()"
                  class="flex h-14 w-14 items-center justify-center rounded-xl bg-indigo-500 text-white shadow-lg shadow-indigo-500/30 hover:bg-indigo-600 active:scale-95 transition-all font-semibold disabled:opacity-50"
                  :disabled="isLoadingAction"
                  title="Reproducir/Pausar"
                >
                  <i class="fa-solid text-lg" :class="isLoadingAction ? 'fa-spinner fa-spin' : (status.paused ? 'fa-play pl-1' : 'fa-pause')"></i>
                </button>

                <!-- SKIP BUTTON -->
                <button 
                  type="button"
                  @click="skip()"
                  class="flex h-14 w-14 items-center justify-center rounded-xl bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-white hover:bg-gray-300 dark:hover:bg-gray-600 active:scale-95 transition-all font-semibold disabled:opacity-50"
                  :disabled="isLoadingAction"
                  title="Siguiente canción"
                >
                  <i class="fa-solid text-lg" :class="isLoadingAction ? 'fa-spinner fa-spin' : 'fa-forward-step'"></i>
                </button>

                <!-- STOP BUTTON -->
                <button 
                  type="button"
                  @click="stop()"
                  class="flex h-14 w-14 items-center justify-center rounded-xl bg-red-500/10 dark:bg-red-500/20 text-red-600 dark:text-red-400 hover:bg-red-500/20 dark:hover:bg-red-500/30 active:scale-95 transition-all font-semibold disabled:opacity-50"
                  :disabled="isLoadingAction"
                  title="Detener"
                >
                  <i class="fa-solid text-lg" :class="isLoadingAction ? 'fa-spinner fa-spin' : 'fa-stop'"></i>
                </button>
              </div>
            </div>
          </div>

          <!-- Volume Control -->
          <div class="border-t border-gray-200 dark:border-white/10 pt-6">
            <label class="block text-sm font-bold text-gray-700 dark:text-gray-200 mb-4">
              <i class="fa-solid fa-volume-low mr-2 text-gray-500"></i>
              Volumen: <span class="text-indigo-600 dark:text-indigo-400" x-text="status.volume + '%'"></span>
            </label>
            <div class="flex items-center gap-4">
              <i class="fa-solid fa-volume-low text-gray-400"></i>
              <input 
                type="range" 
                min="0" max="100" 
                :value="status.volume"
                @change="setVolume($event.target.value)"
                class="flex-1 h-2 bg-gray-200 dark:bg-gray-700 rounded-lg appearance-none cursor-pointer accent-indigo-500"
                :disabled="isLoadingAction"
              />
              <i class="fa-solid fa-volume-high text-gray-400"></i>
            </div>
          </div>

          <!-- Queue -->
          <template x-if="status.queue && status.queue.length > 0">
            <div class="border-t border-gray-200 dark:border-white/10 pt-6">
              <h4 class="text-sm font-bold text-gray-700 dark:text-gray-200 mb-4 flex items-center gap-2">
                <i class="fa-solid fa-list"></i>
                Próximas canciones (<span x-text="status.queue.length"></span>)
              </h4>
              <div class="space-y-2 max-h-64 overflow-y-auto">
                <template x-for="(track, idx) in status.queue.slice(0, 10)" :key="idx">
                  <div class="flex items-start gap-3 p-3 rounded-lg bg-gray-50 dark:bg-white/5">
                    <span class="flex-shrink-0 w-6 h-6 flex items-center justify-center rounded-full bg-indigo-500/20 text-indigo-600 dark:text-indigo-400 text-xs font-bold" x-text="idx + 1"></span>
                    <div class="flex-1 min-w-0">
                      <p class="text-sm font-semibold text-gray-900 dark:text-gray-100 truncate" x-text="track.title || 'Título desconocido'"></p>
                      <p class="text-xs text-gray-500 dark:text-gray-400 truncate" x-text="track.author || 'Artista desconocido'"></p>
                    </div>
                  </div>
                </template>
              </div>
            </div>
          </template>
        </div>
      </template>
    </div>

    <!-- RIGHT: Search -->
    <div class="p-8 bg-gray-50 dark:bg-white/5 flex flex-col max-h-[calc(100vh-80px)] overflow-y-auto">
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-2">
        <i class="fa-solid fa-magnifying-glass text-indigo-500"></i>
        Buscar Canciones
      </h3>

      <!-- Search Input -->
      <div class="mb-6">
        <div class="relative">
          <input 
            type="text"
            x-model="searchQuery"
            @input="debounceSearch()"
            placeholder="Buscar canción, artista..."
            class="w-full px-4 py-3 rounded-lg bg-white dark:bg-gray-800 border border-gray-300 dark:border-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all"
          />
          <i class="fa-solid fa-magnifying-glass absolute right-3 top-1/2 -translate-y-1/2 text-gray-400"></i>
        </div>
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-2">Escribe para buscar canciones</p>
      </div>

      <!-- Search Loading -->
      <template x-if="searchLoading">
        <div class="flex flex-col items-center justify-center py-12">
          <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-gray-200 dark:bg-white/10 pulse">
            <i class="fa-solid fa-music text-xl text-gray-400"></i>
          </div>
          <p class="text-sm text-gray-600 dark:text-gray-300">Buscando...</p>
        </div>
      </template>

      <!-- Search Results -->
      <template x-if="!searchLoading && searchResults.length > 0">
        <div class="flex-1 flex flex-col">
          <div class="flex-1 overflow-y-auto space-y-2 mb-4">
            <template x-for="(song, idx) in searchResults" :key="idx">
              <div class="group p-3 rounded-lg bg-white dark:bg-gray-800 hover:bg-indigo-50 dark:hover:bg-indigo-900/20 border border-gray-200 dark:border-gray-700 hover:border-indigo-300 dark:hover:border-indigo-600 transition-all">
                <div class="flex gap-3 items-center">
                  <!-- Thumbnail -->
                  <div class="flex-shrink-0 w-12 h-12 rounded-lg overflow-hidden bg-gray-200 dark:bg-gray-700">
                    <img 
                      :src="song.thumbnail" 
                      :alt="song.title"
                      class="w-full h-full object-cover"
                    />
                  </div>
                  
                  <!-- Song Info -->
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-semibold text-gray-900 dark:text-white truncate" x-text="song.title"></p>
                    <p class="text-xs text-gray-500 dark:text-gray-400 truncate" x-text="song.author"></p>
                    <p class="text-xs text-gray-400 dark:text-gray-500 mt-1" x-text="song.duration"></p>
                  </div>
                  
                  <!-- Add Button -->
                  <button 
                    type="button"
                    @click="addToQueue(song)"
                    :disabled="isLoadingAction"
                    class="flex-shrink-0 h-10 w-10 flex items-center justify-center rounded-lg bg-indigo-500 text-white hover:bg-indigo-600 active:scale-95 transition-all disabled:opacity-50 font-bold text-lg"
                    title="Agregar a la cola"
                  >
                    <i class="fa-solid text-sm" :class="isLoadingAction ? 'fa-spinner fa-spin' : 'fa-plus'"></i>
                  </button>
                </div>
              </div>
            </template>
          </div>

          <!-- Pagination -->
          <template x-if="searchHasMore || searchPage > 1">
            <div class="flex gap-2 justify-center pt-4 border-t border-gray-200 dark:border-white/10">
              <button 
                type="button"
                @click="prevPage()"
                :disabled="searchPage <= 1 || searchLoading"
                class="px-3 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-200 text-sm font-semibold hover:bg-gray-300 dark:hover:bg-gray-600 disabled:opacity-50 transition-colors"
              >
                <i class="fa-solid fa-chevron-left mr-1"></i>
                Anterior
              </button>
              <span class="px-3 py-2 text-sm text-gray-600 dark:text-gray-300 font-semibold" x-text="'Página ' + searchPage"></span>
              <button 
                type="button"
                @click="nextPage()"
                :disabled="!searchHasMore || searchLoading"
                class="px-3 py-2 rounded-lg bg-indigo-500 text-white text-sm font-semibold hover:bg-indigo-600 disabled:opacity-50 transition-colors"
              >
                Siguiente
                <i class="fa-solid fa-chevron-right ml-1"></i>
              </button>
            </div>
          </template>
        </div>
      </template>

      <!-- Empty State -->
      <template x-if="!searchLoading && searchQuery === '' && searchResults.length === 0">
        <div class="flex-1 flex flex-col items-center justify-center text-center">
          <div class="mb-4 h-16 w-16 flex items-center justify-center rounded-full bg-gray-200 dark:bg-white/10">
            <i class="fa-solid fa-search text-2xl text-gray-400"></i>
          </div>
          <p class="text-gray-600 dark:text-gray-300 text-sm font-medium">Comienza a buscar canciones</p>
          <p class="text-gray-400 text-xs mt-1">Escribe el nombre de una canción o artista</p>
        </div>
      </template>

      <!-- No Results -->
      <template x-if="!searchLoading && searchQuery !== '' && searchResults.length === 0">
        <div class="flex-1 flex flex-col items-center justify-center text-center">
          <div class="mb-4 h-16 w-16 flex items-center justify-center rounded-full bg-gray-200 dark:bg-white/10">
            <i class="fa-solid fa-circle-xmark text-2xl text-gray-400"></i>
          </div>
          <p class="text-gray-600 dark:text-gray-300 text-sm font-medium">No se encontraron resultados</p>
          <p class="text-gray-400 text-xs mt-1">Intenta con otra búsqueda</p>
        </div>
      </template>
    </div>
  </div>
</section>

<script>
function musicPlayer() {
  return {
    // Player Data
    status: { active: false, paused: false, volume: 50, current: null, queue: [] },
    loading: true,
    error: null,
    isConnected: false,
    lastUpdate: null,
    isLoadingAction: false,
    guildId: '<%= guild.id %>',
    updateInterval: null,

    // Search Data
    searchQuery: '',
    searchResults: [],
    searchLoading: false,
    searchPage: 1,
    searchHasMore: false,
    searchCache: {},
    searchTimeout: null,

    async updateStatus() {
      if (this.isLoadingAction) return;

      try {
        const response = await fetch(`/dashboard/${this.guildId}/music/status`);
        if (!response.ok) throw new Error('Error de conexión');
        
        const data = await response.json();
        this.status = data;
        this.isConnected = true;
        this.lastUpdate = new Date().toLocaleTimeString('es-ES');
        this.error = null;
      } catch (err) {
        this.isConnected = false;
        console.error('[PLAYER] Status Error:', err);
      } finally {
        this.loading = false;
      }
    },

    debounceSearch() {
      clearTimeout(this.searchTimeout);
      this.searchPage = 1;
      
      this.searchTimeout = setTimeout(() => {
        this.performSearch();
      }, 500);
    },

    async performSearch() {
      if (!this.searchQuery.trim()) {
        this.searchResults = [];
        return;
      }

      const cacheKey = `${this.searchQuery}_${this.searchPage}`;
      
      if (this.searchCache[cacheKey]) {
        this.searchResults = this.searchCache[cacheKey].results;
        this.searchHasMore = this.searchCache[cacheKey].hasMore;
        return;
      }

      this.searchLoading = true;

      try {
        const response = await fetch(`/dashboard/${this.guildId}/music/search`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            query: this.searchQuery,
            page: this.searchPage 
          })
        });

        if (!response.ok) throw new Error('Error en la búsqueda');

        const data = await response.json();
        this.searchResults = data.results || [];
        this.searchHasMore = data.hasMore || false;

        this.searchCache[cacheKey] = {
          results: this.searchResults,
          hasMore: this.searchHasMore
        };

      } catch (err) {
        console.error('[SEARCH] Error:', err);
        this.error = err.message;
        this.searchResults = [];
        this.searchHasMore = false;
      } finally {
        this.searchLoading = false;
      }
    },

    async addToQueue(song) {
      if (this.isLoadingAction) return;

      this.isLoadingAction = true;

      try {
        const response = await fetch(`/dashboard/${this.guildId}/music/control`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ 
            event: 'music:ADD_QUEUE',
            data: { 
              track: {
                title: song.title,
                author: song.author,
                uri: song.uri,
                thumbnail: song.thumbnail,
                duration: song.duration
              }
            }
          })
        });

        if (!response.ok) {
          const errData = await response.json();
          throw new Error(errData.error || 'No se pudo agregar la canción');
        }

        this.error = null;
        await new Promise(r => setTimeout(r, 500));
        await this.updateStatus();

      } catch (err) {
        console.error('[QUEUE] Error:', err.message);
        this.error = `Error al agregar: ${err.message}`;
      } finally {
        this.isLoadingAction = false;
      }
    },

    togglePause() {
      this.executeAction('music:TOGGLE_PAUSE');
    },

    skip() {
      this.executeAction('music:SKIP_TRACK');
    },

    stop() {
      this.executeAction('music:STOP_PLAYER');
    },

    async setVolume(vol) {
      const volume = Number(vol);
      this.status.volume = volume;
      this.executeActionWithData('music:SET_VOLUME', volume);
    },

    nextPage() {
      if (this.searchHasMore && !this.searchLoading) {
        this.searchPage++;
        this.performSearch();
      }
    },

    prevPage() {
      if (this.searchPage > 1 && !this.searchLoading) {
        this.searchPage--;
        this.performSearch();
      }
    },

    async executeAction(eventName) {
      if (this.isLoadingAction) return;
      
      this.isLoadingAction = true;

      // Optimistic UI updates
      if (eventName === 'music:TOGGLE_PAUSE') this.status.paused = !this.status.paused;
      if (eventName === 'music:STOP_PLAYER') this.status.active = false;
      if (eventName === 'music:SKIP_TRACK') {
        if (this.status.queue && this.status.queue.length > 0) {
          this.status.current = this.status.queue.shift();
        }
      }

      try {
        const payload = {
          event: eventName,
          data: {}
        };
        
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 8000);
        
        const response = await fetch(`/dashboard/${this.guildId}/music/control`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload),
          signal: controller.signal
        });

        clearTimeout(timeoutId);

        if (!response.ok) {
          const errData = await response.json();
          throw new Error(errData.error || 'Acción fallida');
        }

        this.error = null;
        
      } catch (err) {
        console.error('[CONTROL] Error:', err.message);
        this.error = err.message;
      } finally {
        this.isLoadingAction = false;
        setTimeout(() => {
          this.updateStatus();
        }, 300);
      }
    },

    async executeActionWithData(eventName, volume) {
      if (this.isLoadingAction) return;
      
      this.isLoadingAction = true;

      try {
        const payload = {
          event: eventName,
          data: { volume: volume }
        };
        
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 8000);
        
        const response = await fetch(`/dashboard/${this.guildId}/music/control`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload),
          signal: controller.signal
        });

        clearTimeout(timeoutId);

        if (!response.ok) {
          const errData = await response.json();
          throw new Error(errData.error || 'Acción fallida');
        }

        this.error = null;
        
      } catch (err) {
        console.error('[CONTROL] Error:', err.message);
        this.error = err.message;
      } finally {
        this.isLoadingAction = false;
        setTimeout(() => {
          this.updateStatus();
        }, 300);
      }
    },

    init() {
      this.updateStatus();
      this.updateInterval = setInterval(() => this.updateStatus(), 5000);
    },

    destroy() {
      if (this.updateInterval) clearInterval(this.updateInterval);
      if (this.searchTimeout) clearTimeout(this.searchTimeout);
    }
  };
}
</script>
